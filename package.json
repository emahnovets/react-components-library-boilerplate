    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.5.0",
    "prettier": "1.15.3",
    "prettier-stylelint": "^0.4.2",
    "puppeteer": "^1.11.0",
    "react-docgen-typescript-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "start-server-and-test": "^1.7.11",
    "style-loader": "^0.23.1",
    "stylelint": "^9.10.1",
    "stylelint-config-airbnb": "^0.0.0",
    "stylelint-order": "^2.0.0",
    "stylelint-scss": "^3.5.1",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.4",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1"
  },
  "dependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "scripts": {
    "start": "start-storybook -p 8081",
    "start:ci": "start-storybook -p 8081 --ci",
    "lint": "yarn lint:ts && yarn lint:scss",
    "lint:ts": "tslint --project tsconfig.json -c tslint.json 'src/**/*.{ts,tsx}'",
    "lint:scss": "stylelint \"src/**/*.scss\" --syntax scss",
    "build": "rm -rf dist && webpack",
    "build:storybook": "build-storybook",
    "test": "yarn lint && yarn test:unit && yarn ci:integration",
    "test:unit": "jest",
    "test:integration": "jest -c jest.integration.config.js",
    "test:update:image-snapshots": "jest -c jest.integration.config.js -u",
    "update:image-snapshots": "start-server-and-test start:ci http-get://localhost:8081 test:update:image-snapshots",
    "precommit": "lint-staged",
    "format:ts": "prettier \"src/**/*.{ts,tsx}\" --write",
    "format:scss": "prettier \"src/**/*.scss\" --write",
    "ci:integration": "start-server-and-test start:ci http-get://localhost:8081 test:integration",
    "preversion": "yarn test && yarn build && git add --force dist/",
    "postversion": "commit_message=$(git log -1 --format=%B) && git reset --soft HEAD~1 && git reset dist/ && git commit -m $commit_message && git push && git push --tags"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.scss": [
      "prettier --write",
      "git add"
    ]
  }
}
